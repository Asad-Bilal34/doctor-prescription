generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Clinic {
  id          String    @id @default(uuid())
  name        String
  drNameEn    String
  drDegreesEn String
  drNameUr    String
  drDegreesUr String
  clinicAddress String
  clinicContact String
  logo        String?
  patients    Patient[]
  users       User[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}

model Patient {
  id        String   @id @default(cuid())
  name      String
  age       String?
  sex       String?
  mobile    String
  date      String
  complaints String?
  diseases  String?
  advice    String?
  treatment String?
  createdAt DateTime @default(now())
  updatedAt DateTime?
  clinicId  String
  clinic    Clinic   @relation(fields: [clinicId], references: [id])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER")
  approved  Boolean  @default(false)
  clinicId  String?
  clinic    Clinic?  @relation(fields: [clinicId], references: [id])
  createdAt DateTime @default(now())
}
