
# Backend Port
PORT=4000

# SQLite Database (no setup needed! - file stored in backend/prisma/dev.db)
DATABASE_URL="file:./prisma/dev.db"

# For production, use a managed PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Secret (change this in production!)
SESSION_SECRET=my-super-secret-jwt-key-change-this-in-production

# First registered user with this email becomes ADMIN
INIT_ADMIN_EMAIL=admin@example.com
INIT_ADMIN_PASSWORD=Admin123!@#

# Node environment
NODE_ENV=development

